#include<iostream>
using namespace std;

template <class T>
void Change(T x, T y)
{
	cout << "Before Change: first value: " << x
		<< "\n\t\tsecond value:" << y << endl << endl;
	T a;
	a = x;
	x = y;
	y = a;
	cout << "After change:first value: " << x << "\n\t\tsecond value: " << y << endl << endl;
}

void main()
{
	Change('s', 'k');
		Change(90, 2);
		getchar();
}



#############################################################################################################
output:
Before Change: first value: s
                second value:k

After change:first value: k
                second value: s

Before Change: first value: 90
                second value:2

After change:first value: 2
                second value: 90






